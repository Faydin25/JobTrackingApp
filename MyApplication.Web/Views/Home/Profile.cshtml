@model MyApplication.Web.Models.User


@{
    Layout = "_Layout";
}

<form asp-action="EditProfile" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Username">Kullanıcı Adı</label>
        <input type="text" class="form-control" id="Username" name="Username" value="@Model.UserName" />
    </div>
    <div class="form-group">
        <label for="FullName">Tam Adı</label>
        <input type="text" class="form-control" id="FullName" name="FullName" value="@Model.Password" />
    </div>
    <div class="form-group">
        <label for="Email">E-posta</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" />
    </div>
    <div class="form-group">
        <label for="ProfilePicture">Profil Resmi</label>
        <input type="file" class="form-control" id="ProfilePicture" name="ProfilePicture" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

<a class="btn btn-secondary" href="/Home/Logout">Hesaptan Çıkış Yap</a>
<a class="btn btn-secondary" href="/Home/Index">Anasayfaya Dön</a>
