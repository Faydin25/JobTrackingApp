@model MyApplication.Web.Models.User

@{
    Layout = "_Layout";
}

<form asp-action="EditProfile" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Username">Kullanıcı Adı</label>
        <input type="text" class="form-control" id="Username" asp-for="UserName" />
    </div>
    <div class="form-group">
        <label for="Email">E-posta</label>
        <input type="email" class="form-control" id="Email" asp-for="Email" />
    </div>

    @* <div class="form-group">
    <label for="ProfilePicture">Profil Resmi</label>
    <input type="file" class="form-control" id="ProfilePicture" asp-for="ProfilePicture" />
    </div> *@

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

